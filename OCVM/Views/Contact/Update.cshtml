@model Contact
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}
<div class="container">

    <div class="col-sm-6">
        <h2><i class="fa fa-edit"></i>Update Your Contact Information</h2>
    </div>

</div>
<hr />

<div class="container">
    <form asp-controller="Contact" asp-action="Update" method="post" class="form-horizontal" role="form">

        <input type="hidden" asp-for="ContactID" />

        <div class="form-group">
            <label class="col-sm-3 control-label">Career Objective</label>
            <div class="col-sm-6">
                <input asp-for="Objective" class="form-control input-lg m-bot15" placeholder="write your career objective " />
                <span asp-validation-for="Objective" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Email Address</label>
            <div class="col-sm-6">
                <input asp-for="Email" class="form-control" placeholder="example@examle.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label"> Your Phone Number</label>
            <div class="col-sm-6">
                <input asp-for="PhoneNumber" class="form-control" placeholder="+88 01842661999" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label"> Linkedin Profile Url</label>
            <div class="col-sm-6">

                <input asp-for="LinkdInUrl" class="form-control" placeholder="www.linkedin.com/emib" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Permanent Address</label>
            <div class="col-sm-6">
                <input asp-for="PermanentAddress" class="form-control input-lg m-bot15" placeholder="your permanent address" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Present Address</label>
            <div class="col-sm-6">
                <input asp-for="presentAddress" class="form-control input-lg m-bot15" placeholder="your present address" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Current Location</label>
            <div class="col-sm-6">
                <input asp-for="CurrentLocation" class="form-control" placeholder="your current location " />
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="btn-group col-md-offset-3 col-md-6">
                <input class="btn btn-info" type="submit" value="Back" asp-controller="Contact" asp-action="Index" />
                <button class="btn btn-primary" type="submit" asp-controller="Contact" asp-action="Update">Update &nbsp;<i class="fa fa-edit"></i></button>
            </div>
        </div>
    </form>
</div>
