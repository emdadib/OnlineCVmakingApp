@model OCVM.ViewModels.ExperianceVm
@{
    Layout = "~/Views/Shared/_UserDashboard.cshtml";

}
<div class="container">

    <div class="col-sm-6">
        <h2><i class="fa fa-plus-circle"></i> Experiance</h2>
    </div>

</div>
<hr />



<div class="container">
    <form asp-controller="Exp" asp-action="Create" method="post" class="form-horizontal" role="form">
        <!-- Text input-->
        <div class="form-group">
            <label class="col-sm-3 control-label">You are</label>
            <div class="col-sm-6">
                <select asp-for="Experience.PersonalID" class="form-control" asp-items="@ViewData["Pid"] as List<SelectListItem>"></select>
            </div>
        </div>
        <div id="field">
            <div id="field0">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Company Name</label>
                    <div class="col-sm-6">
                        <input asp-for="Experience.Company_Name" class="form-control" />
                        <span asp-validation-for="Experience.Company_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Company Business</label>
                    <div class="col-sm-6">
                        <input asp-for="Experience.Company_Business" class="form-control" />
                        <span asp-validation-for="Experience.Company_Business" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Department</label>
                    <div class="col-sm-6">
                        <input asp-for="Experience.Department" class="form-control" />
                        <span asp-validation-for="Experience.Department" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Designation</label>
                    <div class="col-sm-6">
                        <input asp-for="Experience.Designation" class="form-control" />
                        <span asp-validation-for="Experience.Designation" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Skill</label>
                    <div class="col-sm-6">
                        <input asp-for="Experience.Skill" class="form-control" />
                        <span asp-validation-for="Experience.Skill" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Start & End Date</label>
                    <div class="col-sm-3">
                        <input asp-for="Experience.start_Date" class="form-control" />
                        <span asp-validation-for="Experience.start_Date" class="text-danger"></span>
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="Experience.End_Date"  class="form-control" />
                        <span asp-validation-for="Experience.End_Date" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
        <!-- Button -->
        <div class="form-group">
           
            <div class="col-sm-offset-3 btn btn-group">
                &nbsp;&nbsp;&nbsp;
                <button id="add-more" name="add-more" class="btn btn-primary">Add More</button>
            </div>
            <div class="btn btn-group col-sm-offset-2">
                <input class="btn btn-info" type="submit" value="Return" asp-controller="Home" asp-action="Index" />
                <button class="btn btn-primary" type="submit" asp-controller="Exp" asp-action="Create">Save & Continue &nbsp;<i class="fa fa-arrow-circle-right"></i></button>
            </div>

        </div>
       
    </form>
</div>
<hr />
<br />
<br />
<script type="text/javascript">
   $(document).ready(function () {
  
    var next = 0;
    $("#add-more").click(function(e){
        e.preventDefault();
        var addto = "#field" + next;
        var addRemove = "#field" + (next);
        next = next + 1;
        var newIn = ' <div id="field' + next + '" name="field' + next + '"><!-- Text input--><div class="form-group"><label class="col-sm-3 control-label">Company Name</label><div class="col-sm-6"><input asp-for="Experience.Company_Name" class="form-control" /><span asp-validation-for="Experience.Company_Name" class="text-danger"></span></div></div ></div> <!-- Text input--><div class="form-group"><label class="col-sm-3 control-label">Company Business</label><div class="col-sm-6"><input asp-for="Experience.Company_Business" class="form-control" /><span asp-validation-for="Experience.Company_Business" class="text-danger"></span></div></div> <div class="form-group"><label class="col-sm-3 control-label"> Department</label><div class="col-sm-6"><input asp-for="Experience.Department" class="form-control" /><span asp-validation-for="Experience.Department" class="text-danger"></span></div></div><div class="form-group"><label class="col-sm-3 control-label">Designation</label><div class="col-sm-6"><input asp-for="Experience.Designation" class="form-control" /><span asp-validation-for="Experience.Designation" class="text-danger"></span></div></div><div class="form-group"><label class="col-sm-3 control-label">Skill</label><div class="col-sm-6"><input asp-for="Experience.Skill" class="form-control" /><span asp-validation-for="Experience.Skill" class="text-danger"></span></div></div><div class="form-group"><label class="col-sm-3 control-label">Start & End Date</label><div class="col-sm-3"><input asp-for="Experience.start_Date" type="date" class="form-control" /><span asp-validation-for="Experience.start_Date" class="text-danger"></span></div><div class="col-sm-3"><input asp-for="Experience.End_Date" type="date" class="form-control" /><span asp-validation-for="Experience.End_Date" class="text-danger"></span></div></div>';
        var newInput = $(newIn);
        var removeBtn = '<div class=form-group><button id="remove' + (next - 1) + '" class="col-sm-offset-3 btn btn-danger remove-me" >Remove</button></div></div></div><div id="field">';
        var removeButton = $(removeBtn);
        $(addto).after(newInput);
        $(addRemove).after(removeButton);
        $("#field" + next).attr('data-source',$(addto).attr('data-source'));
        $("#count").val(next);

            $('.remove-me').click(function(e){
                e.preventDefault();
                var fieldNum = this.id.charAt(this.id.length-1);
                var fieldID = "#field" + fieldNum;
                $(this).remove();
                $(fieldID).remove();
            });
    });

});
</script>