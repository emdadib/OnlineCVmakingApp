@model IEnumerable<OCVM.ViewModels.ExpViewModels>
@{
    ViewData["Title"] = "EduInfo";
    Layout = "~/Views/Shared/_UserDashboard.cshtml";
}
<div class="container">

    <div class="col-sm-6">
        <h2><i class="fa fa-laptop"></i> Job Experiance</h2>
    </div>

</div>
<hr />
<div>
    @foreach (var item in Model)
    {
        <ul class="list-group list-group-flush col-sm-10 col-lg-offset-2">
            <li class="list-group-item col-sm-4">Company Name</li>
            <li class="list-group-item col-sm-6">@item.Company_Business</li>
            <li class="list-group-item col-sm-4">Company Business</li>
            <li class="list-group-item col-sm-6">@item.Company_Business</li>
            <li class="list-group-item col-sm-4">Department</li>
            <li class="list-group-item col-sm-6">@item.Designation</li>
            <li class="list-group-item col-sm-4">Designation</li>
            <li class="list-group-item col-sm-6">@item.Designation</li>
            <li class="list-group-item col-sm-4">Skill</li>
            <li class="list-group-item col-sm-6">@item.Skill</li>
            <li class="list-group-item col-sm-4">Start Date</li>
            <li class="list-group-item col-sm-6">@item.start_Date</li>
            <li class="list-group-item col-sm-4">End Date</li>
            <li class="list-group-item col-sm-6">@item.End_Date</li>
           
        </ul>

        <div class="btn btn-group col-lg-offset-2">
            <a asp-action="Index" class="btn btn-info">Back to List</a>
            <a asp-action="Update" class="btn btn-success" asp-route-id="@item.ExperienceID">Edit Information</a>
            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ExperienceID">Delete</a>
        </div>
    }
</div>
<hr />