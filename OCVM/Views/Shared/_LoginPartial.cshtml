@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="float-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi @UserManager.GetUserName(User)!</a>
                <ul>
                    <li><input class="btn btn-default" type="submit" value="Logout" /></li>
                </ul>
            </li>


        </ul>
       
    </form>
}
else
{
    <ul class="float-right">
        <li><a asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-user"></i> Sign Up</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-lock"></i> Log In</a></li>
    </ul>
}